<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        app:cardCornerRadius="5dp"
        app:cardElevation="@android:dimen/thumbnail_height">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_margin="8dp"
                      android:orientation="vertical"
                      android:id="@+id/linearLayout">

                <ImageView
                        android:layout_height="100dp"
                        android:layout_width="match_parent"
                        android:layout_gravity="start"
                        android:scaleType="centerCrop"
                        android:id="@+id/my_drinks_icon"
                        android:src="@mipmap/beer"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="start">

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                                  android:id="@+id/my_drinks_name"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                  android:id="@+id/my_drinks_category"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                  android:id="@+id/my_drinks_price"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                  android:id="@+id/my_drinks_alcohol"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                  android:id="@+id/my_drinks_volume"/>

                </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/relative_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/my_drinks_edit_button"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:text="@string/my_drink_edit_button" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/my_drinks_add_button"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:text="@string/my_drink_add"
                                    android:visibility="gone" />


                        </RelativeLayout>

                </LinearLayout>

        </LinearLayout>
</com.google.android.material.card.MaterialCardView>
